<div class="col-md-12">
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

  <%# f.error_notification %> <!-- This is Default -->
  <% if !(f.error_notification.blank?) %>
                <div class="alert alert-danger" role="alert"><%= f.error_notification %></div>
<% end %>

  
  <h3>Edit Account Information</h3>
  <!-- <h2>Edit <%# resource_name.to_s.humanize %></h2> <-->

  <div class="form-group">
    <%= f.input :name, required: true, autofocus: true, input_html: {class: "form-control"}  %>
  </div>
  
  <div class="form-group">
    <%= f.input :email, required: true, input_html: {class: "form-control"}  %>
  </div>
  
  <div class="fomr-group">
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false, input_html: {class: "form-control"}  %>
    <%= f.input :password_confirmation, required: false, input_html: {class: "form-control"}  %>
  </div>
  <br>
  <div class="form-group">
    <%= f.input :current_password, hint: "we need your current password to confirm your changes", required: true, input_html: {class: "form-control"}  %>
  </div>

  <div class="form-actions">
      <%= f.button :submit, "Update", class: "btn btn-success", style: "width: 100px" %>
      <%= link_to "Canel", root_path, class: "btn btn-default", style: "width: 100px"  %>
  </div>
  <% end %>

  <br><br><br>

  <div class="panel-footer">
    <h4>Delete my account</h4>
    <p>Unhappy?   <%= link_to "Delete My Account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger" %></p>
  </div> <!-- panel-footer -->

</div> <!-- col-md-12 , check top-->