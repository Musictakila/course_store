
<div class="row">
  <% @listings.each do |listing| %>
    <div class="col-md-3">
      <div class="thumbnail">
        <%= image_tag listing.image.url %> <br>
        <div class="caption">
        <h3><%= listing.name %></h3>
        <!-- <p><%= listing.description.first(30) %>....</p> -->
        <p><%= number_to_currency(listing.price) %></p>
        <p>
          <%= link_to 'Show', listing, class: "btn btn-link" %> 
          <%= link_to 'Edit', edit_listing_path(listing), class: "btn btn-link" %>
          <%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %>
        </p>
        </div>
    </div> <!-- thumbnail -->
    </div> <!-- col-md-3 -->
  <% end %>
</div> <!-- row -->

<p><%= link_to 'New Listing', new_listing_path, class: "btn btn-primary" %></p>



